<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_match_the_voices"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_back"
        android:text="Match the voices"
        android:textAllCaps="false"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/kalam_light"
        app:layout_constraintBottom_toTopOf="@id/btn_solve_the_problem"
        app:layout_constraintEnd_toStartOf="@id/btn_match_the_shapes"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_match_the_shapes"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/btn_back"
        android:text="Match the shapes\n"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/btn_match_the_voices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_match_the_voices"
        app:layout_constraintTop_toTopOf="@id/btn_match_the_voices"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_solve_the_problem"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:background="@drawable/btn_back"
        android:text="Sole the problems\n"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_match_the_shapes"
        app:layout_constraintStart_toStartOf="@id/btn_match_the_voices"
        app:layout_constraintTop_toBottomOf="@id/btn_match_the_voices"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_info"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginStart="5dp"
        android:background="@drawable/info_btn"
        android:text="i"
        android:fontFamily="@font/kalam_regular"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationBeautifulButterfly"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:rotation="315"
        app:layout_constraintEnd_toEndOf="@id/btn_match_the_voices"
        app:layout_constraintTop_toTopOf="@id/btn_match_the_voices"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/beautiful_butterfly" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationYellowButterfly"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="10dp"
        android:rotation="45"
        app:layout_constraintStart_toStartOf="@id/btn_match_the_voices"
        app:layout_constraintTop_toTopOf="@id/btn_match_the_voices"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/yellow_butterfly" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLeaf1"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/leaves" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLeaf2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="300dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/leaves" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLeaf3"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginEnd="300dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/leaves" />

</androidx.constraintlayout.widget.ConstraintLayout>