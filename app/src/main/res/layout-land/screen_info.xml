<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forest">

    <LinearLayout
        android:id="@+id/dialog"
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_back"
        android:layout_marginVertical="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App is developed by Arzigul Nazarbaeva in 34the lesson at Gita dasturchilar akademiyasi in 2022. Resources taken from https://www.freepik.com, https://lottiefiles.com, https://freeanimalsounds.org, ProSounds you tube channel, https://voicebot.su/en/category/"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/kalam_light"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="#FF9800"
        android:textSize="32sp"
        android:fontFamily="@font/kalam_bold"
        android:textStyle="bold"
        android:translationZ="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/closest_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:background="@drawable/info_btn"
        android:paddingTop="18dp"
        android:paddingBottom="19dp"
        android:src="@drawable/ic_round_clear_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>